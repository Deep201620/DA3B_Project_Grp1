@model DA3B_Project_Grp1.ViewModels.CreateRoleViewModel;
@{
    ViewData["Title"] = "Create New Role";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DA3B_Project_Grp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome-free-6.0.0-web//css/all.css" />

</head>
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form  method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            

            <button type="submit" class="btn btn-primary">@*<i class="fa fa-user-plus"></i>&nbsp;*@ Create Role</button>
        </form>
    </div>
</div>
